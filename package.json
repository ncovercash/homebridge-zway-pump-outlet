{
	"displayName": "Z-Way Pump Outlet",
	"name": "homebridge-zway-pump-outlet",
	"author": "ncovercash",
	"version": "3.0.2",
	"description": "Exposes a smart outlet as an pump for a hydropoinc system.",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git://github.com/ncovercash/homebridge-zway-pump-outlet.git"
	},
	"bugs": {
		"url": "https://github.com/ncovercash/homebridge-zway-pump-outlet/issues"
	},
	"main": "dist/index.js",
	"keywords": [
		"homebridge-plugin"
	],
	"engines": {
		"homebridge": ">=1.0.0"
	},
	"lint-staged": {
		"src/*.{js,ts}": [
			"prettier --write",
			"eslint"
		],
		"*.{json}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"axios": "^1.0.0",
		"cookie": "^0.7.0",
		"fast-array-diff": "^0.2.0"
	},
	"devDependencies": {
		"@types/cookie": "0.6.0",
		"@types/node": "14.18.63",
		"@typescript-eslint/eslint-plugin": "3.10.1",
		"@typescript-eslint/parser": "3.10.1",
		"eslint": "7.32.0",
		"homebridge": "1.9.0",
		"husky": "4.3.8",
		"lint-staged": "10.5.4",
		"nodemon": "2.0.22",
		"prettier": "2.8.8",
		"typescript": "3.9.10"
	},
	"scripts": {
		"build": "tsc --listEmittedFiles",
		"watch": "npm run clean && nodemon",
		"clean": "touch tsconfig.tsbuildinfo && rm tsconfig.tsbuildinfo && mkdir -p dist/tmp && rm -r dist",
		"lint": "prettier --write 'src/*.{js,ts,json}' '*.json'",
		"prepublishOnly": "npm run build"
	},
	"husky": {
		"hooks": {
			"post-merge": "npm ci",
			"pre-commit": "lint-staged && npm run build"
		}
	}
}
